<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <!-- Name Label -->

        <TextView
            android:id="@+id/datum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="6dp"
            android:textColor="#43bd00"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!-- Description label -->

        <TextView
            android:id="@+id/straatnaam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textColor="#acacac" >
        </TextView>
        <!-- Linear layout for cost and price Cost: Rs.100 -->

        <TextView
            android:id="@+id/aardoverlast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/ingevoerddoor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/aantal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/postcode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/plaatsnaam"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/subaardoverlast"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/subsubaardoverlast"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/terugkoppelinggevraagd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/klachtid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/gpsdata"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>

        <TextView
            android:id="@+id/userid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="0dip"
            android:textColor="#acacac" >
        </TextView>
    </LinearLayout>

</LinearLayout>